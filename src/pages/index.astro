---
import Layout from "~/layouts/PageLayout.astro";

import { SITE } from "~/config.mjs";

import Hero from "~/components/widgets/Hero.astro";
import TwoColsFeatures from "~/components/widgets/TwoColsFeatures.astro";
import BasicFAQs from "~/components/widgets/BasicFAQs.astro";

const title = `${SITE.name} — Habilidades Humanas em Tecnologia`;
const description =
  "Human Skills First, é um movimento com o mindset onde as habilidades humanas tem seu papel fundamental no desenvolvimento profissional, empresarial e principalmente no mercado de trabalho.";
const canonical = new URL("", Astro.site);
---

<Layout meta={{ title, description, canonical }}>
  <main class="dark:bg-black">
    <Hero />
    <TwoColsFeatures />
    <BasicFAQs />
  </main>
</Layout>
